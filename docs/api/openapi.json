        "properties": {
          "query": {
            "type": "string",
            "minLength": 3,
            "title": "Query",
            "description": "Search query"
          }
        },
        "type": "object",
        "required": [
          "query"
        ],
        "title": "SearchRequest"
      },
      "TripRequest": {
        "properties": {
          "source": {
            "type": "string",
            "minLength": 2,
            "title": "Source",
            "description": "Source location"
          },
          "destination": {
            "type": "string",
            "minLength": 2,
            "title": "Destination",
            "description": "Destination location"
          },
          "travel_mode": {
            "type": "string",
            "pattern": "^(Self|Booking)$",
            "title": "Travel Mode",
            "description": "Travel mode"
          },
          "budget": {
            "type": "string",
            "title": "Budget",
            "description": "Budget amount"
          },
          "theme": {
            "type": "string",
            "pattern": "^(Adventure|Cultural|Devotional|Nightlife|Relaxation)$",
            "title": "Theme"
          },
          "duration": {
            "type": "string",
            "title": "Duration",
            "description": "Trip duration"
          },
          "start_date": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Start Date"
          },
          "travelers_count": {
            "anyOf": [
              {
                "type": "integer",
